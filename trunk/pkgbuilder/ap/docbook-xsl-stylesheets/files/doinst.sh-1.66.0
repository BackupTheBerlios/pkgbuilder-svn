    "/usr/share/xml/docbook/xsl-stylesheets-1.62.4" $CATALOG
/usr/bin/xmlcatalog --noout --del \
    "/usr/share/xml/docbook/xsl-stylesheets-1.65.1" $CATALOG

# 1.62.4
/usr/bin/xmlcatalog --noout --add "rewriteSystem" \
    "http://docbook.sourceforge.net/release/xsl/1.62.4" \
    "/usr/share/xml/docbook/xsl-stylesheets-1.66.0" $CATALOG
