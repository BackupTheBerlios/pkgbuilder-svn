#!/bin/sh
CATALOG=/etc/xml/catalog

[ -e $CATALOG ] || /usr/bin/xmlcatalog --noout --create $CATALOG

# cleanup
/usr/bin/xmlcatalog --noout --del \
    "/usr/share/xml/docbook/xsl-stylesheets-1.52.2" $CATALOG
