do_fetch() {
    for pkg in $PKG_URL ; do
        local base="$FETCH_DIR/`basename "$pkg"`"

        if [ -r $base ] ; then
            if grep -q `md5sum $base` $PKG_HOME/files/md5sum-$PKG_VERSION ; then
                echo "allready downloaded"
            else
                fetch $pkg
            fi
        else
            fetch $pkg
        fi
    done
    
    return $?
}
