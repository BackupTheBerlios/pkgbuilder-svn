do_fetch() {
    for pkg in $PKG_URL ; do
        local base="$FETCH_DIR/`basename "$pkg"`"
        local sum="$PKG_HOME/files/md5sum-$PKG_VERSION"

        if [ -r $base -a -r $sum ] ; then
            if grep -q `md5sum $base` $sum  ; then
                true
            else
                fetch $pkg
            fi
        else
            fetch $pkg
        fi
    done
    
    return $?
}
