do_unpack() {
    cd $TMP
    
    if [ "$PKG_EXTENSION" = "" ] ; then
        PKG_EXTENSION="tar.gz"
    fi
    
    if [ "$PKG_FILE_NAME" = "" ] ; then
        PKG_FILE_NAME="$PKG_NAME-$PKG_VERSION.$PKG_EXTENSION"
    fi

    tar zxvf $FETCH_DIR/$PKG_FILE_NAME
    
    return $?
}
