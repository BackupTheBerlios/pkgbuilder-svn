do_buildpkg() {
    cd $PKG_DEST
    
    if [ "$PKG_ARCH" = "" ] ; then
        $PKG_ARCH=$ARCH
    fi
    
    makepkg -l y -c n ../$PKG_NAME-$PKG_VERSION-$PKG_ARCH-$PKG_BUILD.tgz
    
    return $?
}
