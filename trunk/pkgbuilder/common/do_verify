do_verify() {
    cd $FETCH_DIR
    
    if [ -f $PKG_HOME/files/md5sum-$PKG_VERSION ] ; then
        md5sum -c $PKG_HOME/files/md5sum-$PKG_VERSION &> /dev/null || return 1
    else 
        echo "pkgbuilder: WARNING no md5sum-$PKG_VERSION file found"
    fi
}
